datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int        @id @default(autoincrement())
  username     String     @unique
  passwordHash String
  createdAt    DateTime   @default(now())
  cases        Case[]
  logs         AuditLog[]
}

model Case {
  id        Int       @id @default(autoincrement())
  userId    Int
  title     String
  narrative String
  locale    String
  createdAt DateTime  @default(now())
  ruling    Ruling?
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Ruling {
  id            Int        @id @default(autoincrement())
  caseId        Int        @unique
  verdict       String
  rationale     String
  citationsJson Json?
  riskFlagsJson Json?
  modelName     String
  tokensIn      Int        @default(0)
  tokensOut     Int        @default(0)
  createdAt     DateTime   @default(now())
  biasCheck     BiasCheck?
  case          Case       @relation(fields: [caseId], references: [id], onDelete: Cascade)
}

model BiasCheck {
  id        Int      @id @default(autoincrement())
  rulingId  Int      @unique
  biasScore Float
  notesJson Json
  createdAt DateTime @default(now())
  ruling    Ruling   @relation(fields: [rulingId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int
  action    String
  metaJson  Json?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

